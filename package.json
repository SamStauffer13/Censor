{
  "name": "censor",
  "version": "3.0.0",
  "scripts": {
    "start": "opener spec-runner.html && livereload src",
    "build": "babel src --watch --out-dir lib --ignore specs.js",
    "lint": "eslint src/background.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.8.1",
    "livereload": "*",
    "opener": "*"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jasmine" : true
    },
    "extends": "eslint:recommended",
    "rules": {
      "brace-style": "off",
      "no-console" : "error",
      "no-unused-vars" : "error",
      "no-undef" : "error",
      "no-extra-parens" : "error",
      "no-unreachable" : "error",
      "no-multi-spaces" : "error",
      "yoda" : "error"
    }
  }
}